{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}

    <h1>Liste des stagiaires</h1>

    {#
    {% for stagiaire in stagiaires %}
        <a href="{{ path('show_stagiaire', {'id' : stagiaire.id}) }}">{{ stagiaire.prenom }} {{ stagiaire.nom }}</a> - habitant à {{ stagiaire.ville }}
        <a class="btn btn-warning" href="{{ path('edit_stagiaire', {'id' : stagiaire.id}) }}">Editer le profil</a>
        <a class="btn btn-danger" href="{{ path('delete_stagiaire', {'id' : stagiaire.id}) }}">Supprimer le profil</a><br>
    {% endfor %}
    #}

    {% if stagiaires | length > 0 %}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Prénom et nom du stagiaire
                    </th>
                    <th>
                        Ville
                    </th>
                    <th>
                        Editer le profil
                    </th>
                    <th>
                        Supprimer le profil
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in stagiaires %}
                    <tr>
                        <td>
                            <a href="{{ path('show_stagiaire', {'id' : stagiaire.id}) }}">{{ stagiaire.prenom }} {{ stagiaire.nom }}</a>
                        </td>
                        <td>
                            {{ stagiaire.ville }}
                        </td>
                        <td>
                            <a class="btn btn-warning" href="{{ path('edit_stagiaire', {'id' : stagiaire.id}) }}">Editer le stagiaire</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="{{ path('delete_stagiaire', {'id' : stagiaire.id}) }}">Supprimer le stagiaire</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    {% else %}

        <p>Aucun stagiaire dans l'annuaire des stagiaires.</p>
        
    {% endif %}

    <a class="btn btn-success" href="{{ path('new_stagiaire') }}">Créer un stagiaire</a>
    
{% endblock %}
